    <Border BorderBrush="Gray" BorderThickness="0" Margin="20" CornerRadius="5" Background="Transparent" Name="bdr_video" MouseDown="bdr_video_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
                <Image Grid.Row="0" Height="160" Width="284" 
                   HorizontalAlignment="center" Stretch="Fill" VerticalAlignment="Top" Source="{Binding ImagePath}" />
            <StackPanel Grid.Row="1" Orientation="Horizontal" Height="40" VerticalAlignment="Bottom">
                <TextBlock HorizontalAlignment="Center" Text="{Binding Title}" TextWrapping="Wrap"
